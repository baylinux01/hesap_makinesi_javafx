	<plugins>
	
	 <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>license-maven-plugin</artifactId>
      <version>2.4.0</version>

      <configuration>
        <!-- Çıktı klasörü -->
        <outputDirectory>src/main/resources/META-INF/Licenses About This Program</outputDirectory>
        <!-- Çıktı dosyası adı -->
        <thirdPartyFilename>Third Party Licenses (auto-generated by license-maven-plugin).txt</thirdPartyFilename>
		
        <!-- Opsiyonel: eksik lisansları fail etme -->
        <failOnMissing>false</failOnMissing>
      </configuration>

      <executions>
        <execution>
          <id>add-third-party</id>
          <!-- generate-resources fazında çalışır -->
          <phase>generate-resources</phase>
          <goals>
            <goal>add-third-party</goal>
          </goals>
        </execution>
      </executions>
    </plugin>
	
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-shade-plugin</artifactId>
			<version>3.5.3</version>
			<executions>
				<execution>
					<phase>package</phase>
					<goals>
						<goal>shade</goal>
					</goals>
					<configuration>
						<transformers>
							<transformer implementation=
							"org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
								<manifestEntries>
									<Main-Class>
										baylinux.hesapMakinesi.FakeMain
										</Main-Class>
										<Build-Number>1.0</Build-Number>
								</manifestEntries>
							</transformer>
						</transformers>
					</configuration>
				</execution>
			</executions>
		</plugin>
		
	</plugins>
